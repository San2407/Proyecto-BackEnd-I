<h1>Tabla de productos</h1>
<div>
  <table>

    <thead>
      <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Descripción</th>
        <th>Código</th>
        <th>Precio</th>
        <th>Stock</th>
        <th>Estado</th>
        <th>Categoría</th>
        <th>Imágenes</th>
      </tr>
    </thead>
    <tbody>
      {{#each productos.docs}}
        <tr>
          <td>{{this._id}}</td>
          <td>{{this.title}}</td>
          <td>{{this.description}}</td>
          <td>{{this.code}}</td>
          <td>{{this.price}}</td>
          <td>{{this.stock}}</td>
          <td>{{this.status}}</td>
          <td>{{this.category}}</td>
          <td>{{this.thumbnails}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<div>
  <ul class="pagination">
    {{#if productos.hasPrevPage}}
      <li><a href="/?page={{productos.prevPage}}&&limit=5">Prev</a></li>
    {{/if}}

    <p> Current page: {{productos.page}}</p>

    {{#if productos.hasNextPage}}
      <li><a href="/?page={{productos.nextPage}}&&limit=5">Next</a></li>
    {{/if}}
  </ul>

</div>